<style>
  .index-hero {
    background: url({{'index-hero-bg-mobile.jpg'|file_url}}) no-repeat center top;
    background-size: cover;
  }
  @media (min-width: 768px) {
    .index-hero {
      background: url({{'index-hero-bg-desktop.jpg'|file_url}}) no-repeat center top;
      background-size: cover;
    }
  }
</style>

{% render 'hero',
  classes: 'index-hero',
  title: section.settings.title,
  isButton: true,
  buttonText: 'Shop now',
  buttonLink: '/collections/all'
%}

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "classes",
      "label": "classes"
    },
    {
      "type": "text",
      "id": "title",
      "label": "title"
    },
    {
      "type": "checkbox",
      "id": "isButton",
      "label": "isButton"
    },
    {
      "type": "text",
      "id": "buttonText",
      "label": "buttonText"
    },
    {
      "type": "url",
      "id": "buttonLink",
      "label": "buttonLink"
    }
  ]
}
{% endschema %}
