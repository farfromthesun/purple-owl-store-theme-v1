<a href="{{ product.url }}" title="{{ product.title }}" class="product-thumbnail">
  <div class="product-thumbnail-img">
    <picture>
      <source media="(min-width: 768px)" srcset="{{ product.featured_image | img_url: '400x' }}">
      <img
        src="{{ product.featured_image | img_url: '300x300' }}"
        alt="{{ product.title }}"
        class="product-thumbnail-img-file"
      >
    </picture>
  </div>
  <div class="product-thumbnail-info">
    <strong class="product-thumbnail-title">{{ product.title }}</strong>
    <div class="produtc-thumbnail-prices">
      <span class="price">{{ product.price | money_with_currency }}</span>
    </div>
  </div>
</a>
